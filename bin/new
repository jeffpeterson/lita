#!lldb lita


if !$1:
	print "Usage: " + $0 + " <name>\n"
	return 1

fn replace(string)
	return string \
		.replace("example", $1.underscore) \
		.replace("Example", $1.camelize.capitalize) \
		.replace("EXAMPLE", $1.uppercase)

let c_contents = read("src/lita/example.c")
let h_contents = read("src/lita/example.h")

write("src/lita/" + $1.underscore + ".c", replace(c_contents))
write("src/lita/" + $1.underscore + ".h", replace(h_contents))

print "Created " + $1.underscore + ".c and " + $1.underscore + ".h\n"
